    <style>
        .question {
            background-color: #f0f0f0;
            padding: 25px;
            /* Tăng padding lên */
            margin: 10px 0;
            /* Tăng margin lên */
            cursor: pointer;
            position: relative;
            padding-right: 40px;
            font-size: 20px;
            font-weight: bold;
            /* Tăng kích thước font */
        }

        .question:after {
            content: "\203A";
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            font-weight: bold;
            color: #6c7279;
            font-size: 48px;
            /* Đã được tăng lên */
            font-family: 'Arial', sans-serif;
        }

        .question:after {
            content: "\203A";
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            font-weight: bold;
            color: #6c7279;
            font-size: 24px;
            font-family: 'Arial', sans-serif;
        }

        .answer {
            padding: 10px;
            margin: 5px 0;
            display: none;
            font-size: 18px;
        }

        .comment {
            display: flex;
            margin-bottom: 20px;
        }

        .comment-user-img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            overflow: hidden;
            margin-right: 15px;
        }

        .comment-user-img img {
            width: 100%;
            height: auto;
        }

        .comment-content {
            flex: 1;
        }

        .rating .fa-star {
            color: #FFD700;
            /* Màu sao đánh giá */
        }

        .checked {
            color: orange;
        }

        /* Định dạng cho phần đánh giá */
        #product_ratings_reviews .rating-line {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .rating-bar {
            width: 70%;
            height: 10px;
            background-color: #ccc;
            margin: 0 10px;
            position: relative;
        }

        .rating-fill {
            height: 100%;
            background-color: red;
            position: absolute;
        }

        .star-rating {
            width: 60px;
        }

        .rating-count {
            width: 40px;
        }
        .rating-bar {
    width: 100%;
    background-color: #ccc; /* Màu xám cho thanh nền */
    height: 10px;
}

.rating-fill {
    height: 100%;
    background-color: #f00; /* Màu đỏ mặc định cho thanh đánh giá */
    width: 0%; /* Mặc định không hiển thị */
}

/* Thêm các class tùy chỉnh cho màu sắc khác nếu cần */
.rating-fill.no-rating {
    background-color: #ccc; /* Màu xám nếu không có đánh giá */
}

    </style>

