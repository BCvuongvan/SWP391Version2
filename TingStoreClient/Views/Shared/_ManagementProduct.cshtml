    <style>
        body {
            font-size: 16px;
        }

        /* Additional styles for specific elements if needed */
        .navbar-brand h3,
        .nav-item.nav-link,
        {
        font-size: 16px;
        /* Adjust the font size as needed */
        }

        /* Add more styles as needed for other elements */
        .ms-3 h6,
        .ms-3 span {
            font-size: 18px;
        }

        .navbar-brand h3 {
            font-size: 30px;
            /* Adjust the font size for the navbar-brand */
            margin-right: 15px;
            /* Remove default margin to align the text */
        }

        .btn {
            margin-bottom: 5px;
            /* Add some spacing between the buttons */
        }

        .large-font {
            font-size: 30px;
            /* Adjust the size as needed */
        }

        .form-label {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
            font-weight: 500;
            color: #333333;
            text-transform: capitalize;
        }

        .card-body {
            border: 1px solid rgb(208, 198, 198);
            border-radius: 10px;
        }

        .large-input {
            font-size: 15px;
        }

        .fancy-button {
            padding: 6px 15px;
            font-size: 15px;
            color: #fff;
            background: linear-gradient(45deg, #0871e0, #b73dd8);
            border: none;
            outline: none;
            cursor: pointer;
            position: relative;
            transition: all 0.3s ease;
            border-radius: 30px;
            text-decoration: none;
            box-shadow: none;
        }

        .fancy-button:hover {
            background: linear-gradient(45deg, #9a3bb4, #254fc5);
            transform: translateY(-5px);
        }

        .fancy-button:active {
            transform: translateY(-1px);
        }

        .ms-3 h6 {
            font-size: 17px;
        }

        .ms-3 span {
            font-size: 14px;
        }

        .custom-heading {
            font-size: 2.6rem;
            text-transform: uppercase;
            text-align: center;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            margin-top: 20px;
        }

        .edit-button {
            border: 1px solid #198ae0;
            border-radius: 5px;
            padding: 6px 12px;
            margin-left: 10px;
            text-decoration: none;
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }


        .image-container {
            position: relative;
            display: inline-block;
        }

        .video-upload-btn {
            position: relative;
            width: 85px;
            height: 85px;
            border: 2px dashed #ccc;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            background: url('path_to_your_video_icon/video-icon.png') no-repeat center;
            background-size: 50%;
        }

        .video-upload-btn input[type="file"] {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            opacity: 0;
            cursor: pointer;
        }

        #specifications-container {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
        }

        #specifications-container input,
        #specifications-container button {
            flex-grow: 1;
        }

        .question {
            background-color: #f0f0f0;
            padding: 10px;
            margin: 5px 0;
            cursor: pointer;
            position: relative;
            padding-right: 30px;
        }

        .question:after {
            content: "\203A";
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            font-weight: bold;
            color: #6c7279;
            font-size: 24px;
            font-family: 'Arial', sans-serif;
        }

        .answer {
            padding: 10px;
            margin: 5px 0;
            display: none;
        }
    </style>

    <title>Home Admin Page</title>
</head>

<body>
    <script src="https://kit.fontawesome.com/8143c9cd7e.js" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('addSpecButton').addEventListener('click', function () {
                var specName = document.getElementById('specName').value;
                var specValue = document.getElementById('specValue').value;

                // Tạo một hàng mới cho bảng thông số kỹ thuật
                var newRow = document.createElement('tr');
                newRow.innerHTML = `
            <td><input type="text" name="specNames[]" value="${specName}" readonly></td>
            <td><input type="text" name="specValues[]" value="${specValue}" readonly></td>
            <td><button type="button" class="btn btn-danger removeSpec">Xóa</button></td>
        `;

                // Thêm hàng mới vào bảng
                document.getElementById('specsTable').querySelector('tbody').appendChild(newRow);

                // Xóa trường input sau khi thêm
                document.getElementById('specName').value = '';
                document.getElementById('specValue').value = '';

                // Thêm sự kiện click cho nút xóa thông số kỹ thuật
                newRow.querySelector('.removeSpec').addEventListener('click', function () {
                    this.closest('tr').remove();
                });
            });
        });

        //
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('addQuestionAndAnswerButton').addEventListener('click', function () {
                var questionName = document.getElementById('questionName').value;
                var answerValue = document.getElementById('answerValue').value;

                // Tạo một hàng mới cho bảng thông số kỹ thuật
                var newRow = document.createElement('tr');
                newRow.innerHTML = `
            <td><input type="text" name="questionName[]" value="${questionName}" readonly></td>
            <td><input type="text" name="answerValue[]" value="${answerValue}" readonly></td>
            <td><button type="button" class="btn btn-danger removeSpec">Xóa</button></td>
        `;

                // Thêm hàng mới vào bảng
                document.getElementById('q&aTable').querySelector('tbody').appendChild(newRow);

                // Xóa trường input sau khi thêm
                document.getElementById('questionName').value = '';
                document.getElementById('answerValue').value = '';

                // Thêm sự kiện click cho nút xóa thông số kỹ thuật
                newRow.querySelector('.removeSpec').addEventListener('click', function () {
                    this.closest('tr').remove();
                });
            });
        });
        //phần hiển thị Q&A
        function toggleAnswer(answerId) {
            var answer = document.getElementById(answerId);
            if (answer.style.display === "none") {
                answer.style.display = "block";
            } else {
                answer.style.display = "none";
            }
        }
    </script>


