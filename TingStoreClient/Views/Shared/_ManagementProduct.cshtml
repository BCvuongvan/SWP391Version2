    <!-- Add your custom CSS styles -->
    <link rel="stylesheet" href="~/Mobile_shop/css/style.css">
    <link rel="stylesheet" href="~/Mobile_shop/css/slick.css">
    <link rel="stylesheet" type="text/css" href="~/Mobile_shop/fonts/font/flaticon.css">
    <link rel="stylesheet" href="~/Mobile_shop/css/venobox.css">
    <link rel="stylesheet" href="~/Mobile_shop/css/media.css">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- link bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- link css custom -->
    <link rel="stylesheet" href="~/Mobile_shop/css/homeAdmin.css">
    <!-- Google Web Fonts -->
    <link
        href="https://fonts.googleapis.com/css?family=Great+Vibes|Open+Sans:300,400,600,700,800|Raleway:200,300,400,500,600,700,900"
        rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- link bootstrap -->
    <link rel="stylesheet" href="~/Mobile_shop/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Mobile_shop/css/productDetail.css">
    <link rel="stylesheet" href="~/Mobile_shop/css/slick.css">
    <link rel="stylesheet" href="~/Mobile_shop/css/navbar_styleSheet.css">
    <link rel="stylesheet" type="text/css" href="~/Mobile_shop/fonts/font/flaticon.css">

    <style>
        body {
            font-size: 16px;
            /* Adjust the font size as needed */
        }

        /* Additional styles for specific elements if needed */
        .navbar-brand h3,
        .nav-item.nav-link,
        {
        font-size: 16px;
        /* Adjust the font size as needed */
        }

        /* Add more styles as needed for other elements */
        .ms-3 h6,
        .ms-3 span {
            font-size: 18px;
        }

        .navbar-brand h3 {
            font-size: 30px;
            /* Adjust the font size for the navbar-brand */
            margin-right: 15px;
            /* Remove default margin to align the text */
        }

        .btn {
            margin-bottom: 5px;
            /* Add some spacing between the buttons */
        }

        .large-font {
            font-size: 30px;
            /* Adjust the size as needed */
        }

        .form-label {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
            font-weight: 500;
            color: #333333;
            text-transform: capitalize;
        }

        .card-body {
            border: 1px solid rgb(208, 198, 198);
            border-radius: 10px;
        }

        .large-input {
            font-size: 15px;
            /* Adjust the font size as needed */
        }

        .fancy-button {
            padding: 6px 15px;
            font-size: 15px;
            color: #fff;
            background: linear-gradient(45deg, #0871e0, #b73dd8);
            border: none;
            outline: none;
            cursor: pointer;
            position: relative;
            transition: all 0.3s ease;
            border-radius: 30px;
            text-decoration: none;
            /* Bỏ dấu gạch dưới */
            box-shadow: none;
        }

        .fancy-button:hover {
            background: linear-gradient(45deg, #9a3bb4, #254fc5);
            transform: translateY(-5px);
        }

        .fancy-button:active {
            transform: translateY(-1px);
        }

        .ms-3 h6 {
            font-size: 17px;
        }

        .ms-3 span {
            font-size: 14px;
        }

        .custom-heading {
            font-size: 2.6rem;
            text-transform: uppercase;
            text-align: center;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            margin-top: 20px;
        }

        .edit-button {
            border: 1px solid #198ae0;
            border-radius: 5px;
            padding: 6px 12px;
            margin-left: 10px;
            text-decoration: none;
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }


        .image-container {
            position: relative;
            display: inline-block;
        }
    </style>

    <title>Home Admin Page</title>
</head>

<body>

    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Section-left-->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar navbar-light">
                <a href="" class="navbar-brand mx-4 mb-3 " style="margin-top: -20px;">
                    <h3 class="text-primary" style="font-family: 'Heebo';><i class=" fa fa fa- me-2">
                        </i>TING STORE
                    </h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4" style="margin-top: 30px;">
                    <div class="position-relative">
                        <img class="rounded-circle" src="https://demo.opencart.com/image/cache/profile-45x45.png"
                            alt="admin" style="width: 40px; height: 40px;">
                        <div
                            class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1">
                        </div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0" style="font-weight: bold;">Tom</h6>
                        <span>Admin</span>
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <a asp-controller="HomeAdmin" asp-action="Index" class="nav-item nav-link active"><i
                            class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                    <a asp-controller="Product" asp-action="ListProduct" class="nav-item nav-link">
                        <i class="fa fa-laptop me-2"></i>Manage Products </a>
                    <a asp-controller="SaleProduct" asp-action="ListSaleProduct" class="nav-link">
                        <i class="fa fa-dollar-sign me-2"></i>Manage Sale</a>
                    <a asp-controller="UserManagement" asp-action="Index" asp-route-id="3" class="nav-item nav-link"><i
                            class="fas fa-users"></i>User Management</a>
                    <a asp-controller="Category" asp-action="GetAllCategory" class="nav-link">
                        <i class="fa fa-laptop me-2"></i> Manage Category</a>
                    <a asp-controller="Order" asp-action="GetAllOrder" class="nav-item nav-link"><i
                            class="fa fa-table me-2"></i>Manage Orders</a>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i
                                class="fa-solid fa-gear"></i>Setting</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="" asp-action="" class="dropdown-item">Logout</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="content">
            @RenderBody() <!-- This is where the content of the specific view will be rendered -->
            @RenderSection("Scripts", required: false)
            <!-- Product Part End -->
        </div>
        <!-- Main Content End -->
    </div>
    <script type="text/javascript" src="~/Mobile_shop/js/jquery-1.12.4.min.js"></script>
    <script type="text/javascript" src="~/Mobile_shop/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Mobile_shop/js/slick.min.js"></script>
    <script src="~/Mobile_shop/js/venobox.min.js"></script>
    <script type="text/javascript" src="~/Mobile_shop/js/custom.js"></script>
    <script src="~/Mobile_shop/js/venobox.min.js"></script>

</body>

</html>
