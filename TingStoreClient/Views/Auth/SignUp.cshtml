@model User
@{
    ViewData["Title"] = "SignUp";
    Layout = null;
}
@* Index.cshtml *@
@{
    Layout = null; // Optionally remove layout
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- link bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- link css custom -->
    <link rel="stylesheet" href="~/Mobile_shop/css/login.css">
    <title>Sign Up Page</title>
</head>

<body>
    <!-- Login start -->
    <section class="h-100 gradient-form background">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9">
                    <div class="card text-black">
                        <div class="row g-0">
                            <!-- Left-side -->
                            <div class="col-lg-7 left_side">
                                <div class="card-body p-md-5 mx-md-4">
                                    <form asp-controller="Auth" asp-action="SignUp" method="post">
                                        <div class="text-center" style="color: rgb(47, 69, 173);">
                                            <h1>Sign Up</h1>
                                        </div>
                                        <div hidden class="form-outline mb-0">
                                            <label asp-for="fullName" class="form-label" for="phoneNumber">fullname *</label>
                                            <input asp-for="fullName" type="text" class="form-control"
                                                placeholder="Create a new Phone number" value="none"/>
                                            <span class="error" id="phoneNumberError" style="margin-left: 28px;"></span>
                                        </div>
                                        <div hidden class="form-outline mb-0">
                                            <label asp-for="address" class="form-label" for="phoneNumber">Address *</label>
                                            <input asp-for="address" type="text" 
                                                class="form-control" placeholder="Create a new Phone number" value="none" />
                                            <span class="error" id="phoneNumberError" style="margin-left: 28px;"></span>
                                        </div>
                                        <div class="form-outline mb-0">
                                            <label asp-for="userName" class="form-label" for="username">Username
                                                *</label>
                                            <input asp-for="userName" type="text" class="form-control"
                                                placeholder="Enter your Username" />
                                            <span class="error" id="usernameError" style="margin-left: 28px;"></span>
                                        </div>
                                        <div class="form-outline mb-0">
                                            <label asp-for="email" class="form-label" for="fullname">Email
                                                *</label>
                                            <input asp-for="email" type="email" class="form-control"
                                                placeholder="Enter your Full Name" />
                                            <span class="error" id="fullnameError" style="margin-left: 28px;"></span>
                                        </div>

                                        <div class="form-outline mb-0">
                                            <label asp-for="password" class="form-label" for="email">Password</label>
                                            <input asp-for="password" type="password" class="form-control"
                                                placeholder="Enter your Email" />
                                                <span class="error" id="emailError" style="margin-left: 28px;"></span>
                                        </div>
                                        <div class="form-outline mb-0">
                                            <label asp-for="phoneNumber" class="form-label" for="phoneNumber">Phone
                                                number *</label>
                                            <input asp-for="phoneNumber" type="text" class="form-control"
                                                placeholder="Create a new Phone number" />
                                            <span class="error" id="phoneNumberError" style="margin-left: 28px;"></span>
                                        </div>
                                        @* Uncomment if you have an error message to display
                                        <div class="d-flex align-items-center justify-content-center">
                                        <p class="mb-0">You have an account?</p>
                                        <a href="signUp" class="signup">Sign in</a>
                                        </div>
                                        *@
                                        <div class="btn_box text-center">
                                            <button class="btn text-white btn-block fa-lg gradient-custom-2 mb-1"
                                                type="submit">Sign up</button>
                                        </div>


                                        <div class="d-flex align-items-center justify-content-center">
                                            <p class="mb-0">You have an account?</p>
                                            <a asp-action="Login" asp-controller="Auth" class="signup">Login</a>
                                        </div>

                                        <!-- <p style="color: red;" id="errorMessage" class="error-message text-center"
                                            name="error"></p> -->


                                    </form>
                                </div>
                            </div>
                            <!-- Left-side End -->
                            <!-- Right-side -->
                            <div class="col-lg-5 d-flex align-items-center">
                                <div class="img_box">
                                    <span class="text">Welcome</span>
                                    <img src="~/Mobile_shop/images/signin.jpg" style="width: 100%"
                                        alt="picture mobile" />
                                </div>
                            </div>
                            <!-- Right-side End-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Login End -->
</body>

</html>
