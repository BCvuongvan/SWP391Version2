@{
    ViewData["Title"] = "ForgotPassword";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- link bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- link css custom -->
    <title>Forgot Password</title>
    <style>
        .form-gap {
            padding-top: 100px;
        }

        .form .btn {
            width: 100%;
            background-color: #fbceb5;
        }

        .form .btn:hover {
            width: 100%;
            background-color: #f5aa82;
        }

        .form .btn:focus {
            background-color: #f5aa82;
        }

        .background-wrapper {
            background-image: url('/Mobile_shop/images/resetpass.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            filter: brightness(70%);
            /* Áp dụng hiệu ứng làm tối hơn cho hình ảnh */
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: -1;
            /* Đảm bảo hình nền nằm dưới nội dung */
        }

        .img {
            border: 1px solid rgba(255, 255, 255, 0.8);
            border-radius: 50%;
        }

        .form-control {
            padding: 15px;
            border-radius: 30px;
            border: 1px solid rgba(176, 174, 174, 0.5);
            background-color: rgba(176, 174, 174, 0.5);
        }

        .form-control:hover {
            border-radius: 30px;
            border: 1px solid rgba(255, 254, 254, 0.5);
            background-color: #00000000;
        }

        .form-control:focus {
            border-radius: 30px;
            border: 1px solid rgba(176, 174, 174, 0.5);
            background-color: rgba(156, 144, 144, 0.5);
            color: #fff;
        }
    </style>
</head>

<body>
    <div class="form-gap"></div>
    <div class="background-wrapper"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-md-offset-4 d-flex justify-content-center">
                <div class="panel panel-default">
                    <div class="panel-body p-4">
                        <div class="text-center" style="width: 350px;">
                            <h3><img src="~/Mobile_shop/images/logo.png" alt="Logo img" class="img" width="200"
                                    height="200">
                            </h3>
                            <h2 class="text-center text-white">Are you forgot your password</h2>
                            <p class="text-white">Step 1: enter your username so we can send confirm email to your email</p>
                            <div class="panel-body">
                                <form class="form" asp-action="ForgotPassword" method="post">
                                    <fieldset>
                                        <div class="form-group mb-3">
                                            <div class="form-outline">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"
                                                        style="color: blue;"></i>
                                                </span>
                                                <input name="username" id="emailInput" placeholder="Please enter your username"
                                                    class="form-control" required>
                                            </div>
                                        </div>
                                        @if (TempData["SystemNotificationError"] != null)
                                        {
                                            <div id="systemNotification" class="alert alert-danger m-0 p-2">
                                                <p class="text-dark" style="margin-top: 5px; margin-bottom: 5px;">
                                                    Notification: @TempData["SystemNotificationError"]</p>
                                            </div>
                                        }
                                        <input class="btn btn-block form-control" value="Send Email"
                                            type="submit">
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>