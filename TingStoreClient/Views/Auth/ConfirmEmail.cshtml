@{
    ViewData["Title"] = "ConfirmEmail";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .form-gap {
            padding-top: 100px;
        }

        .form .btn {
            width: 100%;
            background-color: #fbceb5;
        }

        .form .btn:hover {
            width: 100%;
            background-color: #f5aa82;
        }

        .form .btn:focus {
            background-color: #f5aa82;
        }

        .Submit {
            width: 350px;
            height: 56px;
            border-radius: 30px;
            border: 2px solid rgb(33, 28, 28);
            background-color: rgba(231, 101, 101, 0.5);
        }

        .background-wrapper {
            background-image: url('/Mobile_shop/images/resetpass.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            filter: brightness(70%);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: -1;
        }

        .img {
            border: 1px solid rgba(255, 255, 255, 0.8);
            width: 200px;
            height: 100px;
        }

        .form-control {
            font-size: 30px;
            width: 350px;
            height: 60px;
            border-radius: 10px;
            border: 2px solid rgb(255, 255, 255);
            background-color: rgba(248, 225, 225, 0.5);
            text-align: center;
            display: inline-block;
            margin-bottom: 20px;
        }

        .form-control:last-child {
            margin-right: 0;
        }

        .form-control:hover {
            border-radius: 10px;
            border: 1px solid rgba(255, 254, 254, 0.5);
            background-color: #00000000;
        }

        .form-control:focus {
            border-radius: 10px;
            border: 1px solid rgba(244, 226, 226, 0.5);
            background-color: rgba(156, 144, 144, 0.5);
            color: #fff;
        }
    </style>
</head>

<body>
    <div class="form-gap"></div>
    <div class="background-wrapper"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-auto px-10">
                <div class="panel panel-default">
                    <div class="panel-body p-2">
                        <div class="text-center">
                            <h3><img src="~/Mobile_shop/images/logo_web.png" alt="Logo" class="img"></h3>
                            <h2 class="text-center text-white">Verification Code</h2>
                            <p class="text-white">We have sent you the verification code to your email!</p>
                            <form asp-action="ConfirmEmail" method="post">
                                <div class="enter_code">
                                    <input name="code" type="text" class="form-control">
                                </div>
                                <input class="Submit text-white " class="btn btn-block form-control"
                                    value="Let reset my password" type="submit">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>