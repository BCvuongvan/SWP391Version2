@model Product
@{
    ViewData["Title"] = "DeleteProduct";
    Layout = "/Views/Shared/_ManagementProduct.cshtml";
}
<nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
    <div class="navbar-nav align-items-center ms-auto">
        <div class="nav-item">
            <a class="nav-link" style="margin-right: 20px;" asp-controller="Product" asp-action="ListProduct">
                <i class="fa fa-sign-out-alt"></i>
                <span class="d-none d-lg-inline-flex">Back</span>
            </a>
        </div>
    </div>
</nav>
<section id="product_part" class="main">
    <div class="container">
        <h2 class="text-center font-weight-bold text-uppercase text-primary mb-4 large-font custom-heading">XÓA SẢN PHẨM</h2>
        <div class="card-body" style="margin-bottom: 10px;">
            <form asp-controller="Product" asp-action="Delete" method="post" style="margin: 10px;">
                <div hidden>
                    <input type="text" asp-for="proId" class="form-control">
                </div>
                <div>
                    <label class="form-label">Tên sản phẩm: </label>
                    <input type="text" asp-for="proName" class="form-control large-input" disabled>
                </div>
                <div class="form-group">
                    <label class="form-label">Mô tả sản phẩm: </label>
                    <input type="text" asp-for="proDescription" class="form-control large-input" disabled>
                </div>
                <div class="form-group">
                    <label asp-for="proPrice" class="form-label">Giá sản phẩm: </label>
                    <input type="text" asp-for="proPrice" value="@Model.proPrice.ToString("0")"
                        class="form-control large-input" disabled>
                </div>
                <div class="form-group">
                    <label asp-for="proQuantity" class="form-label">Số lượng sản phẩm: </label>
                    <input type="text" asp-for="proQuantity" class="form-control large-input" disabled>
                </div>
                <div class="form-group">
                    <label asp-for="proImage" class="form-label">Ảnh sản phẩm:</label>
                    <div class="custom-file">
                        <img src="~/assets/Product_Images/@Model.proImage" asp-for="ImageFile"
                            style="width: 200px; height: 200px;">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Loại sản phẩm:</label>
                        <input type="text" value="@Model.category?.cateName" class="form-control large-input">
                    </div>
                    <div class="button-container" style="text-align: center;">
                        <button type="submit" style="font-size: 17px; padding: 10px 20px;"
                            class="fancy-button">Delete</button>
                    </div>
            </form>
        </div>
    </div>
</section>