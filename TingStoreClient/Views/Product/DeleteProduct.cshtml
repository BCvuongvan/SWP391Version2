@model Product
@{
    ViewData["Title"] = "DeleteProduct";
}
<link rel="stylesheet" href="~/Mobile_shop/css/updateProduct.css">

<body>
    <div class="container">
        <div class="page-header">
            <h1>Delete product</h1>
            <div class="float-end" style="margin-top: -50px;">
                <a asp-controller="Product" asp-action="ListProduct" data-bs-toggle="tooltip" title
                    class="btn btn-success" data-bs-original-title="Back" aria-label="Back"><i
                        class="fas fa-reply"></i></a>
            </div>
        </div>
        <section id="product_part" class="main">
            <div class="container">
                <div class="card">
                    <form asp-controller="Product" asp-action="Delete" method="post">
                        <div hidden>
                            <input type="text" asp-for="proId" class="form-control">
                        </div>
                        <div class="form-group"> 
                            <label class="form-label">Product Name: </label>
                            <input type="text" asp-for="proName" class="form-control large-input" disabled>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Product Description: </label>
                            <input type="text" asp-for="proDescription" class="form-control large-input" disabled>
                        </div>
                        <div class="form-group">
                            <label asp-for="proPrice" class="form-label">Product Price: </label>
                            <input type="text" asp-for="proPrice" value="@Model.proPrice.ToString("0")"
                                class="form-control large-input" disabled>
                        </div>
                        <div class="form-group">
                            <label asp-for="proQuantity" class="form-label">Number Of Products: </label>
                            <input type="text" asp-for="proQuantity" class="form-control large-input" disabled>
                        </div>
                        <div class="form-group">
                            <label asp-for="proImage" class="form-label">Product Picture:</label>
                            <div class="custom-file">
                                <img src="~/assets/Product_Images/@Model.proImage" asp-for="ImageFile"
                                    style="width: 200px; height: 200px;">
                            </div>
                            <div class="form-group">
                                <label class="form-label">Product Type:</label>
                                <input type="text" value="@Model.category?.cateName" class="form-control large-input">
                            </div>
                            <div class="button" style="text-align: end;">
                                <button type="submit" class="btn btn-primary">Delete</button>
                            </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</body>