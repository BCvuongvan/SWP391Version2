@model Product
@{
    ViewData["Title"] = "UpdateProduct";
}

<link rel="stylesheet" href="~/Mobile_shop/css/updateProduct.css">

<body>
    <div class="container">
        <div class="page-header">
            <h1>Update product</h1>
            <div class="float-end" style="margin-top: -50px;">
                <a asp-controller="Product" asp-action="ListProduct" data-bs-toggle="tooltip" title
                    class="btn btn-success" data-bs-original-title="Back" aria-label="Back"><i
                        class="fas fa-reply"></i></a>
            </div>
        </div>
        <section id="product_part" class="main">
            <div class="container">
                <div class="card">
                    <form asp-controller="Product" asp-action="UpdateProduct" method="post"
                        enctype="multipart/form-data">
                        <div hidden>
                            <input type="text" asp-for="proId" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Product Name: </label>
                            <input type="text" asp-for="proName" class="form-control large-input">
                            <span asp-validation-for="proName" class="error text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Product Description: </label>
                            <input type="text" asp-for="proDescription" class="form-control large-input">
                            <span asp-validation-for="proDescription" class="error text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="proPrice" class="form-label">Product Price: </label>
                            <input type="text" asp-for="proPrice" value="@Model.proPrice.ToString("0")"
                                class="form-control large-input">
                            <span asp-validation-for="proPrice" class="error text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="proQuantity" class="form-label">Number Of Products: </label>
                            <input type="text" asp-for="proQuantity" class="form-control large-input">
                            <span asp-validation-for="proQuantity" class="error text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="proImage" class="form-label">Product Picture:</label> <br>
                            <img src="~/assets/Product_Images/@Model.proImage" style="width: 200px; height: 200px;"><br>
                            <br>
                            <label>New image:</label>
                            <input type="file" class="form-control large-input" name="newImageFile">
                            <span asp-validation-for="proImage" class="error text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="cateId" class="form-label">Product Type:</label>
                            <select asp-for="cateId"
                                asp-items="@(new SelectList(ViewBag.cateList, "cateId", "cateName"))"
                                class="form-control large-input">
                            </select>
                            <span asp-validation-for="cateId" class="error text-danger"></span>
                        </div>
                        <div class="button" style="text-align: end;">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</body>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}