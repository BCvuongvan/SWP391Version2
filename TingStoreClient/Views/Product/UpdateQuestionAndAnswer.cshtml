@model Product
@{
    ViewData["Title"] = "UpdateQuestionAndAnswer";
}

<body>
    <div class="container">
        <div class="page-header">
            <h1>Update questions and anwsers</h1>
            <div class="float-end" style="margin-top: -40px;">
                <a asp-controller="Product" asp-action="ManagementQuestionAndAnswer" asp-route-id="@Model.proId"
                    data-bs-toggle="tooltip" title class="btn btn-success" data-bs-original-title="Back"
                    aria-label="Back"><i class="fas fa-reply"></i></a>
            </div>
        </div>
        <section id="product_part" class="main">
            <div class="container">
                <div class="card-body">
                    <form asp-controller="Product" asp-action="UpdateQuestionAndAnswer" method="post"
                        style="margin: 10px;" enctype="multipart/form-data">
                        <div hidden>
                            <input type="text" asp-for="proId" class="form-control">
                        </div>
                        <div hidden>
                            <input type="text" asp-for="proName" class="form-control">
                        </div>
                        <div>
                            <label class="form-label" style="font-weight: 500;">Questions and Answers: </label>
                            <textarea name="questionAndAnswer" class="form-control large-input"
                                rows="10">@ViewBag.QuestionAndAnswer</textarea>
                        </div> <br>
                        <div class="button-container" style="text-align: center;">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</body>