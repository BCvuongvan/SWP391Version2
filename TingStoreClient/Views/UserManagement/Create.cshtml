@model User
@{
    ViewData["Title"] = "Create";
}
<div id="newProfileContainer" class="container bg-white mt-5 mb-5">
    <div class="d-flex justify-content-center align-items-center">
        <div class="border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Add Staff</h4>
                </div>
                <form asp-controller="UserManagement" asp-action="Create" method="post">
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label asp-for="userName" class="labels"></label>
                            <input asp-for="userName" type="text" class="form-control" placeholder="Username">
                            <span asp-validation-for="userName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Full Name</label>
                            <input asp-for="fullName" type="text" class="form-control" placeholder="Staff fullname">
                            <span asp-validation-for="fullName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="col-md-12">
                            <label class="labels">Email</label>
                            <input asp-for="email" type="email" class="form-control" placeholder="Email">
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Phone Number</label>
                            <input asp-for="phoneNumber" type="text" class="form-control" placeholder="Phone number">
                            <span asp-validation-for="phoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 mt-3">
                            <label class="labels">Address</label>
                            <input asp-for="address" type="text" class="form-control" placeholder="Address">
                            <span asp-validation-for="address" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 mt-3">
                            <label class="labels">Password</label>
                            <input asp-for="password" type="password" class="form-control" placeholder="Password">
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mt-5 text-center">
                        <button class="btn btn-primary profile-button" type="submit">
                            Add new
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
